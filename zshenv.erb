CAPUSER=<%= print("Capistrano user: "); STDOUT.flush; STDIN.gets.chomp %>

export BROWSER=open
export HISTCONTROL=ignoreboth
export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"
export ZSH="<%= ENV['HOME'] %>/.oh-my-zsh"
export PATH="/opt/local/bin:/opt/local/sbin:<%= ENV['HOME'] %>/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

export EDITOR=nano
export VISUAL=less
